<section class="search-page u-container">
  <h1 class="u-text-style-h1">{{ 'header.search' | t }}</h1>

  <form action="{{ routes.search_url }}" method="get" role="search">
    <input
      type="search"
      name="q"
      value="{{ search.terms | escape }}"
      placeholder="{{ 'header.search' | t }}"
    >
    <button type="submit" class="button_primary">{{ 'header.search' | t }}</button>
  </form>

  {%- if search.performed -%}
    {%- if search.results_count > 0 -%}
      <p>{{ search.results_count }} results for "{{ search.terms }}"</p>
      <div class="search-results">
        {%- for item in search.results -%}
          <div class="search-result-item">
            {%- if item.featured_image -%}
              <img
                src="{{ item.featured_image | image_url: width: 150 }}"
                alt="{{ item.featured_image.alt | escape }}"
                loading="lazy"
              >
            {%- endif -%}
            <div>
              <a href="{{ item.url }}">{{ item.title }}</a>
              <p>{{ item.content | strip_html | truncate: 150 }}</p>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- else -%}
      <p>No results found for "{{ search.terms }}"</p>
    {%- endif -%}
  {%- endif -%}
</section>

{% schema %}
{
  "name": "Search Page",
  "settings": []
}
{% endschema %}
