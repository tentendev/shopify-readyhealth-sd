{%- comment -%}
  Hero section placeholder
  TODO: Extract hero section from webflow-export/index.html
{%- endcomment -%}

<section class="hero_section">
  <div class="u-container">
    <h1 class="u-text-style-h1">{{ section.settings.heading }}</h1>
    <p class="u-text-style-body">{{ section.settings.subheading }}</p>
    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="button_primary">
        {{ section.settings.button_label }}
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our amazing products"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
